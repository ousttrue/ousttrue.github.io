{% macro headline(post) -%}
<h1 class="p-name entry-title" itemprop="headline name">
    <a href="{{ post.permalink() }}" class="u-url">{{ post.title()|e}}
    {% if post.previewimage %}
    <img src="{{ '/images' + post.previewimage }}" alt="{{ ftitle|e }}" loading="lazy"
    style="max-width:200px; max-height:200px;" />
    {% endif %}
    </a>
</h1>
<ul itemprop="keywords" class="tags">
    <li>
        <time datetime="{{ post.formatted_date('webiso') }}" title="{{ post.formatted_date(date_format)|e }}">{{
            post.formatted_date(date_format)|e }}</time>
    </li>
    {% if post.tags %}
    {% for tag in post.tags %}
    <li><a class="tag p-category" href="{{ _link('tag', tag) }}" rel="tag">{{ tag|e }}</a></li>
    {% endfor %}
    {% endif %}
</ul>

{%- endmacro %}
