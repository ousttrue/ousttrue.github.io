{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "sphinx autobuild",
            "type": "shell",
            "command": "sphinx-autobuild content build --open-browser",
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "ablog serve",
            "type": "shell",
            "command": "ablog serve -r -w ../build",
            "options": {
                "cwd": "${workspaceFolder}/content"
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "nikola auto",
            "type": "shell",
            "command": ".venv/bin/nikola auto --browser",
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "zola serve",
            "type": "shell",
            "command": "zola_custom",
            "args": [
                "serve",
                "--drafts"
            ],
            "isBackground": true,
            "problemMatcher": []
        }
    ]
}